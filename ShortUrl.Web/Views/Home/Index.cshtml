    <input type="submit" value="提交" />
</form>*@


<form class="form-signin" action="/confrimgenerate" method="post">
    <img class="mb-4" src="/docs/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <label for="inputUrl" class="sr-only">Email address</label>
    <input id="inputUrl" class="form-control" placeholder="请输入url" required autofocus name="url" >
    <div class="mb-3"></div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">生成</button>
</form>

<a href="@ViewBag.shortUrl" target="_blank">@ViewBag.shortUrl</a>
